<%- include("layout", { body: `
  <div class="formCard">
    <h2 class="h2">Forgot Password</h2>
    <div class="muted">Enter your registered email. We will send a 6-digit OTP.</div>

    ${error ? `<div class="alert error" style="margin-top:12px;">${error}</div>` : ""}
    ${ok ? `<div class="alert" style="margin-top:12px;">${ok}</div>` : ""}

    <form method="POST" action="/forgot-password" style="margin-top:14px;">
      <div class="formGrid">
        <div class="field">
          <label>Email</label>
          <input class="input" type="email" name="email" placeholder="you@example.com" required />
        </div>

        <div class="actionsRow">
          <button class="btn btnPrimary" type="submit">Send OTP</button>
          <a class="btn btnGhost" href="/reset-password">Reset Password</a>
          <a class="btn btnGhost" href="/login">Back to Login</a>
        </div>
      </div>
    </form>
  </div>
` }) %>
